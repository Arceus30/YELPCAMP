<%layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Enter title of your ground</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="title"
          placeholder="campground"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">not Look Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location"
          >Enter location of your ground</label
        >
        <input
          type="text"
          class="form-control"
          name="location"
          id="location"
          placeholder="location"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="desc"
          >Enter description of your ground</label
        >
        <textarea
          type="text"
          class="form-control"
          name="description"
          id="descr"
          placeholder="description"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Enter price of your ground</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&#8377;</span>
          <input
            type="number"
            class="form-control"
            name="price"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="">Add Images</label>
        <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            name="image"
            multiple
            id="inputGroupFile02"
          />
          <label class="input-group-text" for="inputGroupFile02">Upload</label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Create</button>
        <button class="btn btn-secondary" type="reset">Reset</button>
      </div>
    </form>
    <a class="mt-3 btn btn-primary text-decoration-none" href="/campgrounds"
      >Cancel</a
    >
  </div>
</div>
