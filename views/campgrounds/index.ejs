<%layout('layouts/boilerplate')%>
<div id="map"></div>
<div class="container">
  <h1>All Campgrounds</h1>
  <% for( let ground of cgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (ground.image && ground.image.length>0) { %>
        <img class="img-fluid" src="<%=ground.image[0].url%>" alt="" />
        <% } else {%>
        <img class="img-fluid" src="" alt="" />
        <%}%>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=ground.title%></h5>
          <p class="card-text"><%=ground.description%></p>
          <p class="card-text">
            <small class="text-secondary"><%=ground.location%></small>
          </p>
          <a href="/campgrounds/<%=ground._id%>" class="btn btn-primary"
            >View <%=ground.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const cgrounds = {features:<%-JSON.stringify(cgrounds)%>};
</script>
<script src="/JS/clusterMap.js"></script>
